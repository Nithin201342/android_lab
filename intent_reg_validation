<--------- MainActivity2.java --------->

package com.example.intentregvalidation;

import android.content.Intent;
import android.os.Bundle;
import android.widget.TextView;


import androidx.activity.EdgeToEdge;
import androidx.appcompat.app.AppCompatActivity;


public class MainActivity2 extends AppCompatActivity {
    private TextView name1;
    private TextView email1;
    private TextView phone1;
    private TextView pass1;
    private TextView gender1;
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        EdgeToEdge.enable(this);
        setContentView(R.layout.activity_main2);


        name1 = findViewById(R.id.name1);
        email1 = findViewById(R.id.email1);
        phone1 = findViewById(R.id.phone1);
        pass1 = findViewById(R.id.pass1);
        gender1 = findViewById(R.id.gender1);


        Intent intent = getIntent();

        String name = intent.getStringExtra("name");
        String email = intent.getStringExtra("email");
        String phone = intent.getStringExtra("phone");
        String pass = intent.getStringExtra("password");
        String gen = intent.getStringExtra(("gender"));


        name1.setText("Name : "+name);
        email1.setText("Email : "+email);
        phone1.setText("Phone : "+phone);
        pass1.setText("Password : "+pass);
        gender1.setText("Gender : "+gen);
    }
}
